    "target": "es6",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
