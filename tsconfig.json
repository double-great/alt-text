{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true // for github-slugger
  },
  "exclude": ["node_modules", "dist", "tests"]
}
